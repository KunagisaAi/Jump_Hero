local Players = game:GetService("Players")
local ContextActionService = game:GetService("ContextActionService")
local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")
local localPlayer = Players.LocalPlayer

-- 蓄力条UI变量
local chargeGui
local chargeBar
local chargeBackground

-- 创建蓄力条UI
local function createChargeBar()
	-- 创建主GUI
	chargeGui = Instance.new("ScreenGui")
	chargeGui.Name = "ChargeJumpGui"
	chargeGui.ResetOnSpawn = false
	chargeGui.Parent = localPlayer:WaitForChild("PlayerGui")
	
	-- 创建背景框
	chargeBackground = Instance.new("Frame")
	chargeBackground.Name = "ChargeBackground"
	chargeBackground.Size = UDim2.new(0, 200, 0, 20)
	chargeBackground.Position = UDim2.new(0.5, -100, 0.8, 0) -- 屏幕底部中央
	chargeBackground.AnchorPoint = Vector2.new(0, 0)
	chargeBackground.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
	chargeBackground.BorderSizePixel = 2
	chargeBackground.BorderColor3 = Color3.fromRGB(120, 120, 120)
	chargeBackground.Visible = false
	chargeBackground.Parent = chargeGui
	
	-- 创建蓄力条
	chargeBar = Instance.new("Frame")
	chargeBar.Name = "ChargeBar"
	chargeBar.Size = UDim2.new(0, 0, 1, 0)
	chargeBar.Position = UDim2.new(0, 0, 0, 0)
	chargeBar.AnchorPoint = Vector2.new(0, 0)
	chargeBar.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
	chargeBar.BorderSizePixel = 0
	chargeBar.Parent = chargeBackground
	
	-- 可选：添加渐变效果
	local gradient = Instance.new("UIGradient")
	gradient.Color = ColorSequence.new({
		ColorSequenceKeypoint.new(0, Color3.fromRGB(0, 255, 0)),    -- 绿色
		ColorSequenceKeypoint.new(0.5, Color3.fromRGB(255, 255, 0)), -- 黄色
		ColorSequenceKeypoint.new(1, Color3.fromRGB(255, 0, 0))     -- 红色
	})
	gradient.Parent = chargeBar
	
	-- 可选：添加文字显示
	local chargeText = Instance.new("TextLabel")
	chargeText.Name = "ChargeText"
	chargeText.Size = UDim2.new(1, 0, 1, 0)
	chargeText.Position = UDim2.new(0, 0, 0, 0)
	chargeText.BackgroundTransparency = 1
	chargeText.Text = "蓄力: 0%"
	chargeText.TextColor3 = Color3.fromRGB(255, 255, 255)
	chargeText.TextStrokeTransparency = 0.5
	chargeText.Font = Enum.Font.GothamBold
	chargeText.TextSize = 14
	chargeText.Parent = chargeBackground
end

-- 原有的跳跃变量
local charging = false
local chargeStartTime = 0
local chargeValue = 0
local maxCharge = 2 -- 最大蓄力秒数
local minCharge = 0.2 -- 最小蓄力秒数
local chargeDecaySpeed = 0.7 -- 达到最大后每秒减少的蓄力量
local lastUpdate = 0
local chargeTimeout = false

-- 获取角色和 HumanoidRootPart
local function getCharacterParts()
	if not localPlayer.Character then return nil, nil end
	local hrp = localPlayer.Character:FindFirstChild("HumanoidRootPart")
	local humanoid = localPlayer.Character:FindFirstChildOfClass("Humanoid")
	return humanoid, hrp
end

-- 判断角色是否在地面
local function isOnGround()
	local humanoid, _ = getCharacterParts()
	if humanoid then
		local state = humanoid:GetState()
		-- 只允许在这些状态下蓄力
		if state == Enum.HumanoidStateType.Running or
			state == Enum.HumanoidStateType.Landed or
			state == Enum.HumanoidStateType.Physics or
			state == Enum.HumanoidStateType.Seated then
			return true
		end
	end
	return false
end

-- 更新蓄力条UI
local function updateChargeBar()
	if not chargeBar or not chargeBackground then return end
	
	local chargePercent = math.clamp(chargeValue / maxCharge, 0, 1)
	
	-- 更新蓄力条长度
	chargeBar.Size = UDim2.new(chargePercent, 0, 1, 0)
	
	-- 更新文字
	local chargeText = chargeBackground:FindFirstChild("ChargeText")
	if chargeText then
		chargeText.Text = string.format("蓄力: %d%%", math.floor(chargePercent * 100))
		
		-- 根据蓄力值改变文字颜色
		if chargePercent < 0.5 then
			chargeText.TextColor3 = Color3.fromRGB(255, 255, 255)
		elseif chargePercent < 0.8 then
			chargeText.TextColor3 = Color3.fromRGB(255, 255, 0)
		else
			chargeText.TextColor3 = Color3.fromRGB(255, 50, 50)
		end
	end
	
	-- 达到最大时闪烁效果
	if chargeTimeout then
		chargeBar.BackgroundTransparency = (tick() % 0.5) > 0.25 and 0.3 or 0
	else
		chargeBar.BackgroundTransparency = 0
	end
end

-- 显示/隐藏蓄力条
local function setChargeBarVisible(visible)
	if chargeBackground then
		chargeBackground.Visible = visible
		if not visible then
			-- 重置蓄力条
			chargeBar.Size = UDim2.new(0, 0, 1, 0)
			local chargeText = chargeBackground:FindFirstChild("ChargeText")
			if chargeText then
				chargeText.Text = "蓄力: 0%"
			end
		end
	end
end

-- 蓄力跳跃动作
local function doJump(power)
	local humanoid, hrp = getCharacterParts()
	if humanoid and hrp then
		-- 计算跳跃方向：角色朝向的XZ平面
		local look = hrp.CFrame.LookVector
		local jumpPower = 50 + 100 * power -- 跳跃高度（可调）
		local forwardPower = 30 + 120 * power -- 向前速度（可调）
		-- 先让角色进入跳跃状态
		humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
		-- 设置速度
		hrp.Velocity = Vector3.new(look.X * forwardPower, jumpPower, look.Z * forwardPower)
	end
end

-- 蓄力过程每帧更新
local function onRenderStep()
	if charging then
		local now = tick()
		if not chargeTimeout then
			chargeValue = now - chargeStartTime
			if chargeValue >= maxCharge then
				chargeValue = maxCharge
				chargeTimeout = true
				lastUpdate = now
			end
		else
			-- 达到最大后缓慢减少
			local dt = now - lastUpdate
			lastUpdate = now
			chargeValue = chargeValue - chargeDecaySpeed * dt
			if chargeValue <= 0 then
				chargeValue = 0
				charging = false
				chargeTimeout = false
				setChargeBarVisible(false)
				return
			end
		end
		-- 更新蓄力条UI
		updateChargeBar()
	end
end

-- 空格键按下/松开处理
local function handleJumpAction(actionName, inputState, inputObj)
	if inputState == Enum.UserInputState.Begin then
		if not charging and isOnGround() then
			charging = true
			chargeTimeout = false
			chargeStartTime = tick()
			lastUpdate = chargeStartTime
			chargeValue = 0
			setChargeBarVisible(true)
			updateChargeBar()
			RunService:BindToRenderStep("JumpCharge", Enum.RenderPriority.Input.Value, onRenderStep)
		end
	elseif inputState == Enum.UserInputState.End then
		if charging then
			RunService:UnbindFromRenderStep("JumpCharge")
			-- 只有松开空格且角色还在地面才能跳跃
			if isOnGround() and chargeValue >= minCharge and chargeValue > 0 and not (chargeTimeout and chargeValue <= 0) then
				-- 执行跳跃
				doJump(math.clamp(chargeValue, minCharge, maxCharge) / maxCharge)
			end
			charging = false
			chargeTimeout = false
			chargeValue = 0
			setChargeBarVisible(false)
		end
	end
	return Enum.ContextActionResult.Sink
end

-- 初始化
local function initialize()
	createChargeBar()
	
	-- 绑定空格键
	ContextActionService:BindAction("CustomChargeJump", handleJumpAction, false, Enum.KeyCode.Space)
end

-- 角色重生时重置
local function onCharacterAdded(character)
	charging = false
	chargeTimeout = false
	chargeValue = 0
	setChargeBarVisible(false)
	
	-- 确保UI存在
	if not chargeGui or not chargeGui.Parent then
		createChargeBar()
	end
end

-- 开始执行
if localPlayer then
	localPlayer.CharacterAdded:Connect(onCharacterAdded)
	if localPlayer.Character then
		onCharacterAdded(localPlayer.Character)
	end
	initialize()
end